@model IEnumerable<TinySoccerManager.Models.Game>

@{
    ViewBag.Title = "Play";
}

<h2>Play</h2>

<p>
    @Html.ActionLink("Replay!", "Play", "Game", null, new { @class = "btn btn-info" })
</p>
<table class="table">
    <tr>
        <th>
            <span>Wedstrijd</span>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Result)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Home.Country.ShortName) vs @Html.DisplayFor(modelItem => item.Away.Country.ShortName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Result)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id })
        </td>
    </tr>
}
    <tr>
        <td>
            
        </td>
    </tr>

</table>
Poulestand poule @Model.FirstOrDefault().Poule.Name<br />
@{ 
    foreach (var i in Model.FirstOrDefault().Poule.PouleResults)
    {
        @i.Key.Country.ShortName<span> </span>
        @i.Value<br />
    }
}