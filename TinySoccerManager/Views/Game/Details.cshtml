@model IEnumerable<TinySoccerManager.Models.GameResult>

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Player.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Goals)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OffenceStopped)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <span>@item.Player.ShirtNumber (@item.Player.Team.Country.ShortName)</span>
            @item.Player.Name @Html.Raw(" ")
            @item.Player.LastName
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Goals)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OffenceStopped)
        </td>
    </tr>
}

</table>
